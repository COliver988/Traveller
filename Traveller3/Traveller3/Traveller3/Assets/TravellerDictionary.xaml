<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Traveller3.Assets">

    <DataTemplate x:Key="WorldList">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="3"
                Text="{Binding hex}" />
            <TextBlock
                Grid.Column="1"
                Margin="3"
                Text="{Binding name}" />
            <TextBlock
                Grid.Column="2"
                Margin="3"
                Text="{Binding UWP}" />
            <TextBlock
                Grid.Column="3"
                Margin="3"
                Text="{Binding bases}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
