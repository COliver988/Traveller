<Page
    x:Class="TravellerTracker.Views.ShipList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TravellerTracker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/TravDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Popup Name="popup" IsLightDismissEnabled="True"></Popup>
        <StackPanel Orientation="Vertical">
            <ListView Name="lvShips" Margin="3">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button
                                Margin="3"
                                Click="btnLoadShipInfo"
                                Tag="{Binding ShipId}">
                                Tracking
                            </Button>
                            <Button
                                Grid.Column="1"
                                Margin="3"
                                Click="btnLoadShip"
                                Tag="{Binding ShipId}">
                                Edit
                            </Button>
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="3"
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding theclass.Description}" />
                            <TextBlock
                                Grid.Column="4"
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding theVersion.Name}" />
                            <TextBlock
                                Grid.Column="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding theWorld.Name}" />
                            <Button
                                Grid.Column="6"
                                Margin="3"
                                Click="btnRemove">
                                Delete
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
