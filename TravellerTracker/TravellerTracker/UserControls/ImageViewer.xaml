<UserControl
    x:Class="TravellerTracker.UserControls.ImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TravellerTracker.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:Microsoft.Toolkit.Uwp.UI.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <my:Carousel x:Name="ctlCarousel">
            <my:Carousel.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Image
                            VerticalAlignment="Bottom"
                            Source="{Binding theImage}"
                            Stretch="Uniform" />
                        <TextBlock Grid.Row="1" Text="{Binding Description}" />
                    </Grid>
                </DataTemplate>
            </my:Carousel.ItemTemplate>
        </my:Carousel>

    </Grid>
</UserControl>
